---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Angel Torres">
	<div  class="dark:bg-gray-700">
	<Header title='Jose Angel Torres Rangel' />
	<div class="w-full flex justify-center dark:bg-gray-700 dark:text-white mt-5 mb-5">
		<div class=" w-full md:max-w-5xl md:flex items-center justify-center">
			<div class=" w-full flex justify-center md:hidden mt-16 mb-10">
				<img src="/cara.png" alt="Mi Foto" class=" rounded-full drop-shadow-lg">
			</div>
			<div class=" hidden md:flex justify-end w-1/3">
				<img src="/angel.png" alt="Mi Foto" class=" h-128">
			</div>
			<div class=" w-full flex items-center justify-center md:w-2/3">
				<div class=" flex-col w-2/3 bg-gray-50 p-5 rounded-2xl dark:text-gray-700 dark:bg-slate-200">
					<div class=" flex items-center justify-center mb-5">
						<p>
							<span class="italic text-2xl text-blue-700">Formacion</span>
						</p>
					</div>
					<div class=" flex items-center justify-center">
						<ul>
                            <li class=" mb-3">Licenciatura en Informatica "Tecnologico de Cd. Guzman"</li>
                            <li>Maestria en Ciencias en Telematica "Universidad de Colima"</li>
                        </ul>
					</div>
                    <div class=" flex items-center justify-center mb-5 mt-10">
						<p>
							<span class="italic text-2xl text-blue-700">Experiencia docente en materias</span>
						</p>
					</div>
					<div class=" flex items-center justify-center">
						<ul>
                            <li>Matematicas Discretas</li>
                            <li>Estructuras de Datos</li>
                            <li>Prog. Orientada a Obj.</li>
                            <li>Fundamentos de BD</li>
                            <li>Taller de Bases de Datos</li>
                            <li>Admon. de Bases de Datos</li>
                            <li>Programacion Web</li>
                            <li>Desarrollo de Proy. de Soft.</li>
                        </ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<Footer />
	</div>
</Layout>