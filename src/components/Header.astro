---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="flex items-center justify-between bg-white text-black h-20  dark:bg-gray-700 dark:text-white">
    <div class="ml-5">
        <h2 class="text-2xl font-bold italic">{title}</h2>
    </div>
    <!-- Profile dropdown -->
    <div class="relative">
        <div class="relative inline-block text-left mr-5">
            <div class=" flex">
                <a href="#" class="text-gray-700 group flex items-center px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-0"
                    onclick="{
                        document.body.classList.toggle('dark');
                        document.body.classList.toggle('bg-gray-700');
                    }"
                >
                    <svg class="mr-3 h-4 w-4 text-gray-400 group-hover:text-gray-500 dark:hidden" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"  width="20" height="20">
