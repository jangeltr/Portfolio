---
interface Props {
    title: string;
    link: string;
	date: string;
    description: string;
	detail: string;
}
const { title, link, date, description, detail } = Astro.props;
---
<article class="rounded-xl bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 p-0.5 transition shadow-lg hover:shadow-2xl opacity-80 hover:opacity-100 hover:scale-105 m-10">
	<div class="rounded-[10px] bg-white p-4 sm:p-6">
		<div class=" w-full flex justify-center text-blue-600">
			<a href={link} target="_blank">
				<h3 class="mt-0.5 text-lg font-medium">
					{title}
				</h3>
			</a>
		</div>
		<div class="mt-4 flex justify-center">
            <p class="text-lg text-purple-600">
                {description}
			</p>
		</div>
		<div class="mt-4">
			<h3 class="mt-0.5 text-lg font-medium text-gray-900">
				{date}
			</h3>
		</div>
		<div class="mt-4 ">
			<p class="mt-0.5 text-md indent-7 text-gray-900 text-justify">
				<Fragment set:html={detail}/>
			</p>
		</div>
	</div>
</article>